[Unit]
Description=Jupyter Notebook

[Service]
Type=simple
PIDFile=/run/jupyter.pid
ExecStart=/usr/local/bin/jupyter-notebook --config=~{{ jupyter_user}}/.jupyter/jupyter_notebook_config.py
User={{ jupyter_user }}
Group={{ jupyter_user }}
WorkingDirectory=/home/{{ jupyter_user}}/notebooks
Restart=always
RestartSec=10
#KillMode=mixed

[Install]
WantedBy=multi-user.target
